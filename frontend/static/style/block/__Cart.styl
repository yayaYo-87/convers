.cart {
  width: 100%
  &__header{
    font-family: 'MerriweatherRegular',Arial, sans-serif;
    font-size: 12px;
    margin-top: 10px;

  }
  &__title{
    margin: 20px 0px 20px 0px ;
    font-size: 26px;
    font-family PTSansRegular
  }
  &__wrapper{
    display: flex
  }
  &__left{
    width: 388px
    margin-right: 50px
    &-img{
      width: 100%
    }
  }
  &__text{
    color: #303942;
    font-size: 20px
    margin: 14px 0px
  }
  &__rew{
    display: flex
    flex-wrap: wrap;
    margin-bottom: 12px;
  }
  &__right{
    width: 522px
    &_price{
      font-size: 24px;
      margin: 20px 0 0;
    }
    &_item{
      margin: 10px 0;
      font-family: MerriweatherRegular
      display: flex
      font-size 14px
      width: 300px

      justify-content: space-between
      &-text{
        border-top: 1px dashed #5e7d23;
        padding-top: 20px;
        color: #282832;
        font-family: MerriweatherRegular
        font-size: 14px
      }
      &-name{
        padding-right: 10px
      }
      &-size{
        justify-content: inherit
      }
      &-button{
        margin: 20px 0px
        display: block;
        color: #ffffff;
        height: 30px;
        width: 92px
        text-align: center;
        background-color #6582a0;
        border: 0;
        padding: 0;
        cursor: pointer;
        border-radius: 4px;
        &:hover{
          span{
            text-decoration: underline
          }
        }
        span{
          font-size 12px
          line-height: 30px
          font-family: MerriweatherRegular
        }
      }
    }
  }
  &__item{
    width:33.2%
    margin-right: 20px
    max-width: 223px
    cursor: pointer
    display: flex
    flex-direction column
    justify-content space-between
    &:nth-child(4n + 4) {
      margin-right: 0px
    }
    &-img{
      overflow: hidden
      height: 100%
      display: flex;
      align-items: center;
      &_wrapper{
        position: relative
      }
      &:hover{
        .cart__item-img_one{
          opacity: 0
        }
        .cart__item-img_two{
          opacity: 1
        }
      }
      &_one{
        opacity: 1
        width: 100%
      }
      &_two{
        opacity: 0
        position: absolute
        top: 0px
        right: 0px
        transition .5s
        width: 100%
      }
      img{
        width: 100%
      }
    }
    &-title{
      margin-top: 10px;
      margin-bottom: 6px;
      span{
        color: #303942;
        text-decoration: none;
        cursor: pointer;
        display: inline-block
        font-size: 14px;
        font-family: MerriweatherRegular;
        &:hover{
          text-decoration: underline;
        }
      }
    }
    &-bottom{
      display: flex
      justify-content: space-between
      margin-top: 10px
      &_price{
        display: flex
        flex-direction column
        justify-content: flex-end
        font-size: 100%;
        color: #a3a3af;
        span{
          color: #c4c4d4;
          text-decoration: line-through;
          font-size: 70%;
          line-height: 10px;
        }
      }
      &_button{
        display: block;
        color: #ffffff;
        height: 30px;
        width: 92px
        text-align: center;
        background-color #6582a0;
        border: 0;
        padding: 0;
        cursor: pointer;
        border-radius: 4px;
        &:hover{
          span{
            text-decoration: underline
          }
        }
        span{
          font-size 12px
          line-height: 30px
          font-family: MerriweatherRegular
        }
      }
    }
  }
}
