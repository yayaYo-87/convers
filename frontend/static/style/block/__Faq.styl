.faq{
  position: relative
  &__title{
    margin: 20px 0px 20px 0px ;

  }
  &__search {
    border: 1px solid #e0e0e0;
    border-radius: 5px;
    padding: 30px;
    margin-top: 20px
    margin-bottom: 30px
    &-input{
      border: 1px solid #e0e0e0;
      border-radius: 3px;
      font-size: 14px;
      width: 100%;
      padding: 10px;
    }
  }
  &__items{
    &_title{
      border-bottom: 1px solid #e0e0e0;
      border-top: 1px solid #e0e0e0;
      padding: 30px 15px
      color: #303942;
      font-family LatoRegular
      font-size 19px
      line-height: 25px
    }
  }
  &__item{
    &_title{
      border-bottom: 1px solid #e0e0e0;
      padding: 20px 50px
      color: #303942;
      font-family LatoRegular
      font-size 19px
      line-height: 25px
    }
    &_cart{
      padding-bottom: 15px;
      padding-top: 15px
      border-bottom: 1px solid #e0e0e0;
      padding-left: 75px
      position: relative
      &-name{
        color: #303942;
        cursor: pointer
        font-family LatoRegular
      }
      &-arrow{
        width: 10px
        height: 15px
        position: absolute
        top: 16px
        left: 55px
        transform rotate(0deg)
        transition .4s
      }
      &-desc{
        padding-top: 10px
      }
      &-active{
        .faq__item_cart-arrow{
          transform rotate(90deg)
        }
        .faq__item_cart-name{
          color: #6582A0;
          font-weight bold
        }
      }
    }
  }
  &__contacts{
    margin-top: 40px
    border: 1px solid #e0e0e0;
    border-radius: 5px;
    padding: 30px;
    display: flex
    justify-content: space-between
    &-title{
      font-weight bold
    }
  }
  &__popup{
    position: fixed
    top: 0px
    left: 0px
    width: 100%
    height: 100%
    display: flex
    justify-content: center
    align-items center
    background-color rgba(0,0,0,0.4)
    &_wrapper{
      background-color white
      border-radius: 3px;
      width: 570px;
    }
    &_title{
      padding: 20px;
      border-bottom: 1px solid #e0e0e0;
      margin: 0
      position: relative
    }
    &_label{
      padding: 20px 20px 10px 20px;
      display: block
      font-weight bold
    }
    &_mail{
      border: 1px solid #e0e0e0;
      border-radius: 3px;
      width: 93%;
      padding: 10px ;
      margin-left: 20px
      margin-bottom: 20px;
      margin-right: 20px
    }
    &_text{
      border: 1px solid #e0e0e0;
      border-radius: 3px;
      width: 93%;
      padding: 10px;
      margin-left:  20px
      resize: none;
      margin-bottom: 20px;
    }
    &_button{
      border: 1px solid #e0e0e0;
      padding: 20px
      display: flex
      justify-content flex-end
    }
    &_close{
      position: absolute
      width: 15px
      height: 15px
      background url("/static/img/close.svg") no-repeat
      background-size 100%
      top: 23px
      right: 20px
      cursor: pointer
    }
  }

}