.footer{
  margin-top: 30px;
  padding-top: 20px;
  border-top: 1px solid #5e7d23;
  clear: both;
  padding-bottom: 100px;
  &__list{
    display: flex
    justify-content: center
    align-items center
    span{
      line-height: 38px
    }
    &_item{
      padding: 8px 0;
      color: #303942;
      text-decoration: none;
      cursor: pointer;
      margin: 0 10px;
      font-family: MerriweatherRegular;
      font-size: 13px
    }
  }
  &__soc {
    display: flex
    justify-content: flex-end
    &_h{
      color: #303942;
      font-size 18px
      margin: 10px 0;
      display: block
    }
    &_list{
      display: flex
      justify-content: flex-end
      &-item{
        margin-left: 7px;
        width: 22px;
        height: 0;
        padding-top: 22px;
        overflow: hidden;
        background: #6582a0 url('../img/soc.png') 0 0 no-repeat;
        display: inline-block;
        zoom: 1;
        -webkit-border-radius: 100px;
        -moz-border-radius: 100px;
        border-radius: 100px;
        transition: background-color 150ms
        background-color: #1bb6ec;
        background-position: -22px 0;
      }
    }
  }
  &__cop{
    padding-top: 35px;
    display: flex
    justify-content: space-between
    &_left{
      color: #303942;
      font-size 11px
      font-family MerriweatherRegular
    }
    &_right{
      &-img{
        width: 40px
        img {
          width: 100%
        }
      }
    }
  }
}
