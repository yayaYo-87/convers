.header {
  &__wrapper{
    display: flex
    justify-content: space-between
  }
  &__logo {
    width: 300px
    padding 20px 0px
    cursor: pointer
    .router-link-active{
      cursor: default
    }
    img {
      width: 100%
    }
  }
  &__right {
    display: flex;
    align-items: flex-end;
    flex-direction: column;
    &-search{
      padding-top: 44px
      display: flex
      justify-content space-between
      &_right{
        .button{
          height: 30px;
          line-height: 30px;
          font-family  MerriweatherRegular
          padding: 0 10px
          border-radius: 4px
          box-shadow none
          border: none
          background: #6582a0;
          color white
          cursor: pointer;
        }
      }
      &_left{
        input{
          width: 154px;
          height: 30px;
          border: 1px solid #ccc;
          padding: 0 0 0 24px;
          background: #fff url('../img/magnifier.png') 9px 9px no-repeat;
          background-image: url('../img/magnifier.svg'), none;
          background-size: 17px 17px, 0 0;
          background-position: 5px 7px, 0 0;
          font-style: italic;
          color: #777;
          vertical-align: top;
          border-radius: 3px;
          -moz-border-radius: 3px;
          -webkit-border-radius: 3px;
          margin-right: 12px
        }
      }
    }
    &_soc {
      &-log{
        font-family  MerriweatherRegular
        font-size 13px
        justify-content flex-end
        display flex
        &_reg{
          cursor: pointer;
          color: #303942
          display: inline-block
          span  {
            &:hover{
              border-bottom: 1px solid black
            }

          }
        }
        &_text{
          color: #303942;
          cursor: pointer;
          display: inline-block
          span  {
            &:hover{
              border-bottom: 1px solid black
            }

          }
        }
      }
      &-items{
        padding-top: 10px
        display: flex
        justify-content: flex-end
        margin-bottom: 8px
      }
      &-item {
        margin-left: 7px;
        width: 22px;
        height: 0;
        padding-top: 22px;
        overflow: hidden;
        background: #6582a0 url('../img/social.png')  no-repeat;
        display: inline-block;
        border-radius: 100px;
      }
      .facebook{
        background-position: 0 0;
        background-color: #3c599f;
      }
      .youtube{
        background-position: -154px 0;
        background-color: #e02a27;
      }
      .instagram{
        background-position: -110px 0;
        background-color: #4f7ca2;
      }
      .vk{
        background: #6582a0 url('../img/vk.png')  no-repeat
        background-size 100%
      }
    }
  }
  &__menu{
    display: flex
    flex-wrap: wrap;
    align-items center
    height: 45px
    padding-bottom: 6px
    margin-bottom: 12px
    border-bottom: 1px solid #5e7d23;
    &_item{
      font-size 14px
      padding-right: 15px
      &-popup{
        position: relative
        &_list{
          position: absolute
          z-index: 2
          top: 30px;
          border-radius: 3px;
          box-shadow: 0px 2px 4px rgba(0,0,0,0.25);
          left: 0;
          background: #f8f8f8;
          &:after{
            content: ''
            position: absolute;
            top: -8px;
            left: 14px;
            z-index: 9998;
            width: 0;
            height: 0;
            border-style: solid;
            border-width: 0 8px 8px 8px;
            border-color: transparent transparent #f8f8f8 transparent;
          }
          &:before{
            content: ''
            width: 100%
            position: absolute
            top: -15px
            left: 0px
            background-color rgba(255, 0, 0, 0)
            height: 20px
            z-index: 3
          }
          &-item{
            color: #333333;
            font-size: 13px;
            display: block;
            line-height: 20px;
            width: 200px
            padding: 5px 10px
            text-decoration none
            border-bottom none
            &:hover{
              border-bottom none !important
              background: #efefef;
              text-decoration underline
              cursor: pointer
            }
          }
        }
      }
      a{
        color: #303942
        &:hover{
          border-bottom: 1px solid #303942
        }
      }
    }
  }
}

