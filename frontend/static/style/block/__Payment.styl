.payment{
  display: flex
  justify-content: center
  align-items center
  &__wrapper{
    margin-top: 40px
    margin-bottom: 20px
    width: 400px
    background-color white
    box-shadow 0px 0px 15px 0px black
    border-radius 2px
    padding: 20px
  }
  &__title{
    font-size 24px
    text-align center
    padding-bottom: 5px
  }
  &__internet{
    text-align center
    padding-bottom: 40px
  }
  &__mail{
    padding-top: 20px
    display: inline-block
    text-align right
  }
  &__item{
    padding-bottom  10px
  }
}