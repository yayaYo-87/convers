.map{
  position: fixed
  top: 0px
  left: 0px
  width: 100%
  height: 100%
  display: flex
  justify-content: center
  align-items center
  z-index: 10
  transform translateY(-100%)
  transition .5s

  &__text{
    h1{
      margin:0px
      background-color white
      font-size: 17px;
      line-height: 53px;
      padding-left: 13px;
      border-radius 5px
    }
  }
  &-active{
    transform translateY(0%)
  }
  &:after{
    content ''
    position: absolute
    top: 0px
    left 0px
    background-color rgba(0, 0, 0, 0.2)
    width: 100%
    height: 100%
    z-index: 2
  }
  &_wrapper{
    width: 840px;
    height: 537px;
    position: relative
    z-index: 3
    border-radius 5px
    box-shadow 0px 0px 10px 4px rgba(0, 0, 0, 0.15)
    display: flex
    background-color white
    .vue-map-container{
      border-radius 5px
    }
  }
  &__close{
    position: absolute;
    width: 150px;
    height: 15px;
    font-size: 12px;
    background: url('/static/img/close.svg') no-repeat;
    background-size: 15px;
    background-position: right;
    top: 20px;
    right: 20px;
    cursor: pointer;
    -webkit-transition: 0.5s;
    transition: 0.5s;
    &:hover{
      color: #2a9dcc
    }
  }
  &_list{
    width: 290px
    height: 400px
    background-color white
    margin-top: 50px
    overflow: auto
    &-item{
      padding-bottom: 10px
      padding-top: 10px
      padding-right: 25px
      padding-left: 33px;
      transition .5s
      font-size 14px
      position: relative
      cursor: pointer
      &:hover{
        background-color rgba(0, 0, 0, 0.05)
      }
      &:after{
        content ''
        background-color #303942;
        position: absolute
        width: 5px;
        height: 5px;
        top: 16px;
        left: 15px;
        border-radius 50%
        transition .5s
      }
      &-active{
        background-color rgba(194,230,245,0.6)
        &:after{
          background-color #2a9dcc
        }
        &:hover{
          background-color rgba(194,230,245,0.6)
        }
      }
    }
  }
  &_popup{
    position: absolute
  }
  &-button{
    position: absolute
    right: 41px;
    width: 210px
    z-index: 20
    bottom: 18px;
    border-radius: 4px;
    font-size: 14px;
    font-weight: 500;
    padding: 20px
    background: #2a9dcc;
    color: #fff;
    border: none;
    outline: none;
    box-shadow: none;
    text-align: center;
    cursor: pointer;
    transition .5s
    &:hover{
      opacity: .8
    }
  }
  &_popup{
    position: absolute
    width: 480px
    bottom: 25px
    padding: 10px
    left: 20px
    font-size 12px
    background-color white
    border-radius 5px
    max-height: 150px
    overflow: auto
    box-shadow 0px 0px 10px 4px rgba(0, 0, 0, 0.15)
    &-address{
      padding-bottom: 5px
      font-weight bold
    }
    &-desc{
      padding-bottom: 5px
    }
    &-phone{
      padding-bottom: 5px
      font-weight bold
    }
    &-schedule{
      font-style italic
    }
  }
}